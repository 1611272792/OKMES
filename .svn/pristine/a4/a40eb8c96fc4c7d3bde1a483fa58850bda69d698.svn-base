
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
   
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-table.js"></script>
    <link href="~/Content/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <style>
                #Main {
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            background: url('../../Images/背景.jpg') no-repeat center;
            background-size: 100% 99.9%;
            display:flex;
            justify-content:center;align-items:center;
        }

        #Login {
            margin: 0px auto;
            width: 33%;
            height: 42%;
            border: 22px solid rgba(255, 255, 255, 0.2);
            background: #DBEAF7;
            background-clip: padding-box;
            text-shadow: 0 0 black;
            box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
            border-radius:10px;      
        }

                .user {
        background-image: url('../../Images/牛Logo.png') !important;
        background-size: 25px 25px;
        background-position: 5px 4px;
        background-repeat: no-repeat;
        padding: 8px 10px 8px 40px;
        border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div id="Main">
        <div id="Login">
            <div>
                <img src="~/Images/牛Logo.png" width:"90"; height="90" style="float:left;margin-top:-10px;" />
                <h1 style="width:440px;margin-top:150px;color:#0093dd;font-weight:400;">OKMES订单查询系统</h1>
                <h4 style="text-align:center;width:430px; margin-top:-14px;color:#0093dd">OKMES Order Inquiry System</h4>
            </div>

            <div>
                <input type="text" placeholder="客户编号" id="userNo" class="user" />
            </div>
        </div>
    </div>
    <script src="~/Scripts/index.js"></script>
</body>
</html>
