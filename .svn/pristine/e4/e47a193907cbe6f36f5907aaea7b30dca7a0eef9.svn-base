        //物流信息
        function getPhyInfo(PhyCode, PhyComName) {
            PhyCode = PhyCode.replace(/\s+/g, ""); //快递号
            var str = PhyComName + "  " + PhyCode;
            PhyName = get_express_company_pinyin(PhyComName); //获取快递公司代码
