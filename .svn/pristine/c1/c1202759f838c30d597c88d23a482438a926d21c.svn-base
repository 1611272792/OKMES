    <script>

        $("#SelectDataDiffs").click(function () {
            var orderId = $.trim($("#orderID").val());
            if (orderId.length <= 0) {
                alert("请输入订单号");
            } else {
                $.ajax({
                    type: "Post",
                    url: "/Main/SelectOrder",
                    data: { orderID: orderId },
                    success: function (data) {
